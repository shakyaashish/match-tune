<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.studio.matchtune.fragment.TagsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtStudio"
        android:text="Overall search criterias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
       />

    <TextView
        android:id="@+id/lblSriterias"
        android:text="here are the criterias that are being used for searching through our large music catalog."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:padding="5dp"/>
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"
        app:tag_theme="none"
        app:tag_enable_cross ="true"
        app:tag_background_color="@color/yellow_001"
        app:tag_text_color="@color/white"
        app:tag_cross_color="@color/white"
        app:tag_border_color="@color/yellow_001"
        app:tag_corner_radius="20dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>